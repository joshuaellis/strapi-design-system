{
  "name": "design-system",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:strapi/design-system.git",
  "license": "MIT",
  "private": true,
  "scripts": {
    "analyze:bundle": "lerna run analyze:bundle --stream",
    "build": "lerna run build --stream --scope=@strapi/icons && lerna run build --stream --scope=@strapi/design-system",
    "setup": "yarn && lerna bootstrap",
    "specify:pull": "specify pull",
    "specify:sync": "specify sync",
    "build-storybook": "build-storybook",
    "generate:icons": "svgr --icon -d ./packages/strapi-icons/src ./packages/strapi-icons/assets/icons",
    "lint": "eslint . --ext .js,.jsx,.mdx --fix",
    "lint-staged": "eslint --fix",
    "storybook": "start-storybook -p 6006",
    "test": "jest -c jest.config.js",
    "test:watch": "jest -c jest.config.js --watchAll",
    "test:e2e": "playwright test",
    "test:e2e:ci": "cross-env CI=true playwright test",
    "test:e2e:watch": "chokidar '**/__tests__/*.e2e.js' -c 'npm run test:e2e -- --retries=0 {path}'",
    "test:e2e:debug": "cross-env PWDEBUG=1 playwright test",
    "test:snapshots": "lerna --scope @strapi/design-system exec -- yarn  test -u",
    "release": "lerna version --no-push --no-git-tag-version && yarn setup && git commit -am \"Releasing\" && lerna publish from-package --contents dist"
  },
  "devDependencies": {    
    "@figspec/react": "^0.1.5",
    "@playwright/test": "1.20.0",
    "@specifyapp/cli": "^0.0.51",
    "@storybook/addon-actions": "^6.4.0",
    "@storybook/addon-essentials": "^6.4.0",
    "@storybook/addon-links": "^6.4.0",
    "@storybook/addon-storyshots": "^6.4.0",
    "@storybook/react": "^6.4.0",
    "@svgr/cli": "^5.5.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "axe-playwright": "^1.1.11",
    "babel-jest": "^26.6.3",
    "chokidar-cli": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-mdx": "^1.17.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "fs-extra": "^10.0.0",
    "husky": "=4",
    "intl": "^1.2.5",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "plop": "^2.7.4",
    "prettier": "^2.2.1",
    "qs": "^6.10.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "rimraf": "^3.0.2",
    "react-copy-to-clipboard": "^5.0.4",
    "storybook-dark-mode": "^1.0.9",
    "styled-components": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "yarn lint-staged"
  }
}
